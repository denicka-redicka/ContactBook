<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/avatar_img"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="85dp"
        android:src="@drawable/img" />

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="64dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/arrow_back"
            android:background="@drawable/back_arrow"
            android:layout_marginTop="4dp"
            android:layout_width="23dp"
            android:layout_height="23dp"/>

        <TextView
            android:id="@+id/contact_text"
            android:text="@string/contact_text"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_marginStart="100dp"
            android:fontFamily="@font/arvo"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:elevation="10dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/name_txt"
        android:layout_width="wrap_content"
        android:fontFamily="@font/arvo"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/avatar_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:text="Denis Sunyaikin"/>

    <LinearLayout
        android:id="@+id/phone_layout"
        app:layout_constraintTop_toBottomOf="@id/name_txt"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:background="@color/gray"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/mobile_txt"
        android:text="@string/mobile"
        app:layout_constraintStart_toStartOf="@id/phone_layout"
        app:layout_constraintTop_toTopOf="@id/phone_layout"
        android:layout_marginStart="28dp"
        android:textColor="@color/dark_gray"
        android:layout_marginTop="6dp"
        android:textSize="16sp"
        android:fontFamily="@font/arvo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_number"
        android:text="+7(987)085-85-87"
        app:layout_constraintStart_toStartOf="@id/phone_layout"
        app:layout_constraintTop_toBottomOf="@id/mobile_txt"
        android:layout_marginStart="28dp"
        android:textColor="@color/dark_gray"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:fontFamily="@font/arvo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/email_layout"
        app:layout_constraintTop_toBottomOf="@id/phone_layout"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginEnd="8dp"
        android:background="@color/gray"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/email_txt"
        android:text="@string/email"
        app:layout_constraintStart_toStartOf="@id/email_layout"
        app:layout_constraintTop_toTopOf="@id/email_layout"
        android:layout_marginStart="28dp"
        android:textColor="@color/dark_gray"
        android:layout_marginTop="6dp"
        android:textSize="16sp"
        android:fontFamily="@font/arvo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/email"
        android:text="dsunyaikin@gmail.com"
        app:layout_constraintStart_toStartOf="@id/email_layout"
        app:layout_constraintTop_toBottomOf="@id/email_txt"
        android:layout_marginStart="28dp"
        android:textColor="@color/dark_gray"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:fontFamily="@font/arvo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>